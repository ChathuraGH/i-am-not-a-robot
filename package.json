{
  "name": "i-am-not-a-robot",
  "version": "0.4.0",
  "description": "cause I can play games",
  "main": "i-am-not-a-robot.js",
  "scripts": {
    "browserify": "for x in demo dist; do npm run browserify_$x; done",
    "browserify_demo": "NODE_PATH=. browserify -t babelify -o docs/bundle.js demo.js",
    "browserify_dist": "NODE_ENV=production browserify -t babelify -r ./${npm_package_name}.js:${npm_package_name} -o dist/${npm_package_name}.js",
    "build": "npm run homepage; npm run browserify; npm run minify",
    "homepage": "echo \"---\ntitle: $npm_package_name\n---\" > docs/index.md; cat README.md >> docs/index.md",
    "lint": "standa src/**/*.js",
    "minify": "cd dist; uglifyjs ${npm_package_name}.js --source-map --output ${npm_package_name}.min.js --compress --mangle -b beautify=false,preamble='\"// http://g14n.info/i-am-not-a-robot\"'; cd -",
    "outdated": "npm outdated",
    "postversion": "git push origin v${npm_package_version}; npm publish; git push origin master",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_PATH=. budo --live --open --css docs/demo.css demo.js -- -t babelify"
  },
  "pre-commit": [
    "lint",
    "outdated"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/i-am-not-a-robot.git"
  },
  "keywords": [
    "i",
    "am",
    "not",
    "robot",
    "spam",
    "protection"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/i-am-not-a-robot/issues"
  },
  "homepage": "http://g14n.info/i-am-not-a-robot",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "budo": "^11.3.2",
    "npm-start-command": "^0.2.0",
    "pre-commit": "^1.2.2",
    "standa": "^2.1.0",
    "uglify-js": "^3.4.2"
  }
}
